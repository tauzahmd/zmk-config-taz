#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 1000  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // default: 10

#include <dt-bindings/zmk/pointing.h>

#define MAIN  0
#define NUM   1
#define SYS   2
#define NAV   3
#define STICKY 4
#define LHRM  5
#define RHRM  6

/ {
    macros {
        // No longer in use
        cmb1: cmb1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LGUI &kp LCTRL>
                , <&macro_pause_for_release>
                , <&macro_release &kp LGUI &kp LCTRL>
                ;
        };
        // No longer in use
        cmb2: cmb2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LSHFT &kp LCTRL>
                , <&macro_pause_for_release>
                , <&macro_release &kp LSHFT &kp LCTRL>
                ;
        };
        // No longer in use
        cmb3: cmb3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LALT &kp LCTRL>
                , <&macro_pause_for_release>
                , <&macro_release &kp LALT &kp LCTRL>
                ;
        };
        cut: cut {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL &kp X>
                , <&macro_pause_for_release>
                , <&macro_release &kp LCTRL &kp X>
                ;
        };
        copy: copy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL &kp C>
                , <&macro_pause_for_release>
                , <&macro_release &kp LCTRL &kp C>
                ;
        };
        paste: paste {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL &kp V>
                , <&macro_pause_for_release>
                , <&macro_release &kp LCTRL &kp V>
                ;
        };
    };
};
/ {
    combos {
        compatible = "zmk,combos";
        combo_nav_left {
            timeout-ms = <80>;
            key-positions = <25 38>;
            bindings = <&to NAV>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_main_left {
            timeout-ms = <80>;
            key-positions = <1 38>;
            bindings = <&to MAIN>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_num_left {
            timeout-ms = <80>;
            key-positions = <3 38>;
            bindings = <&to NUM>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_sys_left {
            timeout-ms = <80>;
            key-positions = <5 38>;
            bindings = <&to SYS>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_nav_right {
            timeout-ms = <80>;
            key-positions = <34 39>;
            bindings = <&to NAV>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_main_right {
            timeout-ms = <80>;
            key-positions = <10 39>;
            bindings = <&to MAIN>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_num_right {
            timeout-ms = <80>;
            key-positions = <8 39>;
            bindings = <&to NUM>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
        combo_sys_right {
            timeout-ms = <80>;
            key-positions = <6 39>;
            bindings = <&to SYS>;
            require-prior-idle-ms = <150>;
            slow-release;
        };
    };
};
&sk {
        release-after-ms = <3500>;
        // /delete-property/ ignore-modifiers;
};
/ {
        behaviors {
                bhm: balanced_homerow_mods {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping-term-ms = <300>;
                        quick-tap-ms = <200>;
                        require-prior-idle-ms = <150>;
                        flavor = "balanced";
                        bindings = <&kp>, <&kp>;
                };
                sm_bk_del: shift_mod_bkps_del {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp BSPC>, <&kp DEL>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                sm_bkt: shift_mod_bkt {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp LBKT>, <&kp RBKT>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                sm_par: shift_mod_par {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp LPAR>, <&kp RPAR>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                sm_brc: shift_mod_brc {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp LBRC>, <&kp RBRC>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                sm_lgt: shift_mod_lgt {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp LT>, <&kp GT>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                sm_rt_cap: shift_mod_ret_cap {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp RET>, <&kp CAPS>;
                        mods = <(MOD_LSFT)>;
                };
                // This is no longer in use
                sl_no_tab: shift_mod_no_tab {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&to NUM>, <&kp TAB>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                        keep-mods = <(MOD_RSFT)>;
                };
                // This is no longer in use
                stk: sticky_s_c_a {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping-term-ms = <150>;
                        quick-tap-ms = <0>;
                        flavor = "tap-preferred";
                        bindings = <&sk>, <&sk>;
                };
                // This is no longer in use
                td_mt: tap_dance_mod_tap {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&stk RALT RSHIFT>, <&sk RCTRL>;
                };
                // This is no longer in use
                sh_ma: shift_mod_main_layer {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&to SYS>, <&kp MAIN>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                };
                td_main: to_main_layer {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping-term-ms = <200>;
                        quick-tap-ms = <0>;
                        flavor = "tap-preferred";
                        bindings = <&to>, <&kp>;
                };
                // No longer in use
                mod_st: mod_st {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping-term-ms = <200>;
                        quick-tap-ms = <0>;
                        flavor = "tap-preferred";
                        bindings = <&kp>, <&sk>;
                };
                lhm: balanced_layer_home_row_mods {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping-term-ms = <300>;
                        quick-tap-ms = <200>;
                        require-prior-idle-ms = <150>;
                        flavor = "balanced";
                        bindings = <&mo>, <&kp>;
                };
        };
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------------------------------------------
// | N/A  |  ESC/Q    |  W       |  E      |  R        |    T    |   |  Y  |    U        |   I      |   O      |  P        | N/A  |
// | N/A  |  A/LCTRL  | S/LSHIFT |  D/LGUI |  F/LALT   | G/LCTRL |   |  H  |   J/RALT    |  K/RGUI  | L/RSHIFT |  ;/RCTRL  | N/A  |
// | N/A  |  Z        |  X       |  C      |  V        |    B    |   |  N  |   M         |  ,       |  .       |  /        | N/A  |
//                               |  TAB    |  DEL/BKP  | ENT/CAP |   | SPC |   sticky    |  ESC     |
                        bindings = <
   &none &mt ESC Q    &kp W         &kp E         &kp R         &kp T           &kp Y          &kp U        &kp I           &kp O         &kp P           &none
   &none &bhm LCTRL A &bhm LSHIFT S &bhm LGUI D   &bhm LALT F   &lhm G RHRM     &lhm H LHRM    &bhm RALT J  &bhm RGUI K     &bhm RSHIFT L &bhm RCTRL SEMI &none
   &none &kp Z        &kp X         &kp C         &kp V         &kp B           &kp N          &kp M        &kp COMMA       &kp DOT       &kp FSLH        &none
                                    &kp TAB       &sm_bk_del    &sm_rt_cap      &kp SPACE      &sl STICKY   &kp ESC
                        >;
                };

                lower_layer {
// -----------------------------------------------------------------------------------------------------------------------------------
// | N/A  |    7     |   8      |   9       |     0      |HOME/M |   |    ~       |   PG_UP    |  UP     |  PG_DN   |  "\" / "|" | N/A  |
// | N/A  |  4/LCTRL | 5/LSHIFT |   6/LGUI  |   LALT     |  END  |   |    '/"     |   LEFT     |  DOWN   |  RIGHT   |   ;        | N/A  |
// | N/A  |   1      |  2       |   3       |    -/_     |  =/+  |   |     [/]    |    (/)     |   {/}   |    .     |    /       | N/A  |
//                              |    TAB    |  DEL/BKP   |  ENT  |   |    SPC     |    sticky  |   </>   |
                       bindings = <
   &none &kp N7        &kp N8         &kp N9         &kp N0        &td_main 0 HOME   &kp GRAVE       &kp PG_UP      &kp UP       &kp PG_DN  &kp BSLH   &none
   &none &bhm LCTRL N4 &bhm LSHIFT N5 &bhm LGUI N6   &kp LALT      &kp END           &kp SQT         &kp LEFT       &kp DOWN     &kp RIGHT  &kp SEMI   &none
   &none &kp N1        &kp N2         &kp N3         &kp MINUS     &kp EQUAL         &sm_bkt         &sm_par        &sm_brc      &kp DOT    &kp FSLH   &none
                                      &kp TAB        &sm_bk_del    &kp RET           &kp SPACE       &sl STICKY     &sm_lgt
                        >;
                };

                raise_layer {
// -------------------------------------------------------------------------------------------------------------------------------
// | N/A  |     F1    |   F2     |   F3    |    F4      | F5/M  |   | F6     | F7       |  F8      |  F9      |   F10     | N/A  |
// | N/A  |   LCTRL   |  LSHIFT  |   LGUI  |    LALT    |INSERT |   | F11    | F12      |  PSCRN   |  INS     |   DEL     | N/A  |
// | N/A  |    BT1    |  BT2     |   BT3   |    BT4     |  BT5  |   | C_MUTE | C_VOL_UP | C_VOL_DN | C_BRI_UP | C_BRI_DN  | N/A  |
//                               |    TAB  |   DEL/BKP  |  ENT  |   | SPC    |  sticky  |  BTCLR   |
                        bindings = <
   &none  &kp F1       &kp F2       &kp F3       &kp F4       &td_main 0  F5    &kp F6     &kp F7        &kp F8        &kp F9       &kp F10       &none
   &none  &kp LCTRL    &kp LSHFT    &kp LGUI     &kp LALT     &kp INS           &kp F11    &kp F12       &kp PSCRN     &kp INS      &kp DEL       &none
   &none  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4      &kp C_MUTE &kp C_VOL_UP  &kp C_VOL_DN  &kp C_BRI_UP &kp C_BRI_DN  &none
                                    &kp TAB      &sm_bk_del   &kp RET           &kp SPACE  &sl STICKY        &bt BT_CLR
                        >;
                };
                nav_layer {
// -------------------------------------------------------------------------------------------------------------------------------
// | N/A  |  CMB1  |  SHFT  |  UP    | ALT     | HOME/M |       | MB4   | None  | None  | None  | None  | None  |
// | N/A  |  CMB2  |  LEFT  |  DOWN  | RIGHT   | END    |       | MB5   | None  | None  | None  | None  | None  |
// | N/A  |  CMB3  |  CUT   | COPY   | PASTE   | WIN    |       | None  | LCLK  | MCLK  | RCLK  | None  | None  |
//                          |  TAB   | DEL/BKP |  ENT   |       | None  | None  | None  |
                        bindings = <
   &none  &none         &none        &none        &none         &none     &mkp MB4   &msc SCRL_LEFT   &msc SCRL_UP   &msc SCRL_DOWN  &msc SCRL_RIGHT  &none
   &none  &kp LCTRL     &kp LSHFT    &kp LGUI     &kp LALT      &none     &mkp MB5   &mmv MOVE_LEFT   &mmv MOVE_UP   &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &none
   &none  &none         &cut         &copy        &paste        &none     &none      &kp LEFT         &kp UP         &kp DOWN        &kp RIGHT        &none
                                     &kp TAB      &sm_bk_del    &kp RET   &mkp LCLK  &mkp MCLK        &mkp RCLK 
                        >;
                };
                sticky_layer {
// -------------------------------------------------------------------------------------------------------------------------------
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
//                         | None  | None  | None  |       | None  | None  | None  |
                        bindings = <
   &none   &kp N1      &kp N2       &kp N3       &kp N4       &kp N5        &kp N6  &kp N7        &kp N8        &kp N9         &kp N0     &none
   &none   &sk LCTRL   &sk LSHFT    &sk LGUI     &sk LALT     &none         &none   &sk RALT      &sk RGUI      &sk RSHIFT     &sk RCTRL  &none
   &none   &none       &none        &none        &none        &none         &none   &none         &none         &none          &none      &none
                                    &none        &none        &none         &none   &none         &none  
                        >;
                };
                lhrm_layer {
// -------------------------------------------------------------------------------------------------------------------------------
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
//                         | None  | None  | None  |       | None  | None  | None  |
                        bindings = <
   &none   &kp N7   &kp N8     &kp N9       &kp N0       &none           &none   &none      &none     &none  &none     &none
   &none   &kp N4   &kp N5     &kp N6       &sk LSHFT    &none           &none   &none      &none     &none  &none     &none
   &none   &kp N1   &kp N2     &kp N3       &none        &none           &none   &none      &none     &none  &none     &none
                               &sk LCTRL    &sk LALT     &sk LGUI        &none   &none      &none  
                        >;
                };
                rhrm_layer {
// -------------------------------------------------------------------------------------------------------------------------------
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
// | None  | None  | None  | None  | None  | None  |       | None  | None  | None  | None  | None  | None  |
//                         | None  | None  | None  |       | None  | None  | None  |
                        bindings = <
   &none   &none   &none     &none       &none    &none        &kp GRAVE     &none          &kp LBKT    &kp RBKT   &kp BSLH     &none
   &none   &none   &none     &none       &none    &none        &none         &sk RSHIFT     &none       &kp SEMI   &kp APOS     &none
   &none   &none   &none     &none       &none    &none        &kp MINUS     &kp EQUAL      &kp COMMA   &kp DOT    &kp FSLH     &none
                             &none       &none    &none        &sk RGUI      &sk RALT       &sk RCTRL

                        >;
                };
        };
};

// Combo 1 Win + Ctrl
// Combo 2 Shit + Ctrl
// Combo 3 Alt + Ctrl
